{{#each posts as |post|}}
<div class='mb-4 d-flex mx-auto'>
    <a href="/post/{{post.id}}">
    <button class="btn btn-warning">
    <h2>{{post.title}}</h2>
    <h5>{{post.body}}</h5>
    <p>Posted by: {{post.user.username}}</p>
    {{!-- <p>{{post.createdAt}}</p> --}}
    <p>{{format_date post.createdAt}}</p>
   
    </button>
    </a>
</div>
{{/each}}